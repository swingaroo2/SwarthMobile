<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gainsboro"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Events" >

    <!-- Event list viewing pane -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- Header -->

            <TextView
                android:id="@+id/events_list_header"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.77"
                android:background="@color/black"
                android:gravity="center"
                android:paddingBottom="5dip"
                android:paddingTop="5dip"
                android:text="@string/events_list_header"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- More info button -->

            <!-- <Button
                android:id="@+id/more_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:onClick="goToLink"
                android:text="?"
                android:textColor="@color/black"
                android:textStyle="bold" /> -->
        </LinearLayout>

        <!-- Actual window -->

        <LinearLayout
            android:id="@+id/event_viewing_window"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/garnet"
            android:orientation="vertical" >

            <!-- ListView -->

            <ListView
                android:id="@+id/events_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="20.0dp" >
            </ListView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>